enum userStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
  TEST
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  username String   @unique
  status   userStatus @default(ACTIVE)
  salt     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  firstName String?
  lastName  String?
}